<theme>
	<formatVersion>7</formatVersion>

	<include>./config.xml</include>
	<include>./views.xml</include>
	<include>./${system.theme}/custom.xml</include>

	<view name="screen">
		<controllerActivity name="controllerActivity">
			<itemSpacing>0.003</itemSpacing>
			<color>FFFFFF80</color>
			<activityColor>3030FFD0</activityColor>
			<hotkeyColor>3030FFD0</hotkeyColor>
		</controllerActivity>
	</view>

	<view name="menu">
		<text name="systemInfo">
			<pos>0.0 0.61</pos>
			<backgroundColor>00000000</backgroundColor>
			<color>DFECFA</color>
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.005</fontSize>
		</text>
		<menuText name="menufooter">
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>FFFFFFFF</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>DFECFA</color>
			<separatorColor>555555FF</separatorColor>
			<selectorColor>006ca3</selectorColor>
			<selectedColor>deec00</selectedColor>
		</menuText>
		<menuTextSmall name="menutextsmall">
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.017</fontSize>
			<color>deec00</color>
		</menuTextSmall>
		<menuText name="menutitle">
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.024</fontSize>
			<color>DFECFA</color>
		</menuText>
		<menuBackground name="menubg">
			<color>2D2C2C</color>
			<path>./_inc/images/frame.png</path>
			<fadePath>./_inc/images/fond_menu.png</fadePath>
		</menuBackground>
		<menuTextEdit name="menutextedit">
			<inactive>./_inc/images/textinput_ninepatch.png</inactive>
			<active>./_inc/images/textinput_ninepatch_active.png</active>
		</menuTextEdit>
	</view>
	<view name="system">
		<sound name="bgsound">
			<path>./sounds/system.ogg</path>
		</sound>
		<helpsystem name="help">
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.014</fontSize>
			<pos>0.0036 0.978</pos>
		</helpsystem>
	</view>

</theme>
